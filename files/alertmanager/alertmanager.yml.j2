#jinja2: lstrip_blocks: True, trim_blocks: False
---

inhibit_rules:
  - source_matchers:
      - alertname = "BlackboxInternetConnectivity"
    target_matchers:
      - alertname =~ "BlackboxConnection|BlackboxHTTPEndpointMissing|ClockSync|ContainerRestarting|ContainerDown"

templates:
  - "/etc/alertmanager/template/*.tmpl"

receivers:
  - name: mattermost-home-lab-alerts
    mattermost_configs:
      -
        webhook_url: {{ alertmanager_mattermost_url }}
        channel: 'home-lab-alerts'
        text: '' # disables default
        attachments:
          -
            {%- raw %}
            color: '{{ if eq .Status "resolved" }}#00FF00{{ else }}#FF0000{{ end }}'
            title: |-
              {{ with index .Alerts 0 }}{{ if .Annotations.summary }}{{ .Annotations.summary }}{{ end }}{{ end }}
            title_link: >-
              {{ with index .Alerts 0 -}}
                {{ .GeneratorURL }}
              {{- end }}
            text: >-
              {{ range .Alerts }}
                {{ .Annotations.description }}
              {{ end }}
        {% endraw %}

  - name: "null"

route:
  receiver: mattermost-home-lab-alerts
  group_by:
    - alertname
  group_wait: 10s
  group_interval: 5m
  repeat_interval: 24h
